#-------------------------------------------------------------------------------
# gnuplotの設定
#-------------------------------------------------------------------------------
reset
set nokey                 # 凡例の非表示
set xrange [0:2]       # x軸方向の範囲の設定
set yrange [-0.4:1]         # y軸方向の範囲の設定

set term gif animate      # 出力をgifアニメに設定
set output "fdtd_1.gif"  # 出力ファイル名の設定

set parametric
set trange [-1:1]
plot 1.0,t
replot 1.1,t

#-------------------------------------------------------------------------------
# 変数の設定
#-------------------------------------------------------------------------------
n0 = 1        # ループ変数の初期値
n1 = 40     # ループ変数の最大値
dn = 1  # ループ変数の増加間隔

#-------------------------------------------------------------------------------
# ループの開始
#-------------------------------------------------------------------------------
load "gnuplot_fdtd_1.plt" 